{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",             
    "forceConsistentCasingInFileNames": true, 
    "allowJs": true,                       
    "resolveJsonModule": true              
  },
  "include": [
    "src/**/*.ts"                          
  ],
  "exclude": [
    "node_modules",                        
    "dist"                                 
  ]
}